<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit "<%= editBlog.title %>" Blog</div>
    <form class="ui form" action="/blogs/<%=editBlog._id%>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%=editBlog.title%>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%=editBlog.image%>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]" required><%=editBlog.body%></textarea>
        </div>
        <input class="ui red basic button big" type="submit">
    </form>
</div>

<% include ./partials/footer %>